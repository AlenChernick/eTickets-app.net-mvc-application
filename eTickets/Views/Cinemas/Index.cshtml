@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<style>
    @@media only screen and (max-width : 680px) {

        img {
            width: 50%
        }

        .row > * {
            padding-left: calc(var(--bs-gutter-x) * -0.1);
        }

        .btn {
            margin-bottom: 0.5rem;
        }
    }
</style>


<section class="row mb-2">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center text-capitalize">
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="shadow-sm">
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle shadow-sm">
                            <img class="rounded-circle shadow-sm img-fluid img-thumbnail" src="@item.Logo" alt="@item.Name" style="min-width: 150px; max-width: 150px; height: 150px" />
                        </td>
                        <td class="align-middle text-capitalize shadow-sm">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle text-capitalize shadow-sm text-break px-lg-5" style="max-width: 650px;">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle text-center text-capitalize">
                            <a class="btn btn-outline-primary mr-1 shadow-sm" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square mr-1"></i>Edit</a>
                            <a class="btn btn-outline-info mr-1 shadow-sm" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye mr-1"></i>Details</a>
                            <a class="btn btn-outline-danger mr-1 shadow-sm" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash mr-1"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>


<div class="text-white d-flex justify-content-end mr-3" style="position:sticky; bottom:25px; z-index: 15;">
    <a asp-controller="Cinemas" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle mr-1"></i>Add New</a>
</div>
